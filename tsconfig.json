{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false
  },
  "include": [
    "packages/*/src/**/*",
    "apps/*/src/**/*",
    "sandboxes/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".artifacts",
    "fixtures"
  ],
  "references": [
    { "path": "./packages/utils" },
    { "path": "./packages/policy" },
    { "path": "./packages/acceptance" }
  ]
}
