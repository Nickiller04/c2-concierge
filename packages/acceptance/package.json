    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@c2/utils": "workspace:*",
    "@c2/policy": "workspace:*",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.3.2",
    "sharp": "^0.33.0",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
