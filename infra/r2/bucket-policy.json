{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowPublicRead",
      "Effect": "Allow",
      "Principal": "*",
      "Action": ["s3:GetObject"],
      "Resource": ["arn:aws:s3:::c2-manifests/manifests/*"]
    },
    {
      "Sid": "DenyOverwrite",
      "Effect": "Deny",
      "Action": [
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:AbortMultipartUpload"
      ],
      "Principal": "*",
      "Resource": ["arn:aws:s3:::c2-manifests/manifests/*"],
      "Condition": {
        "StringNotEquals": {
          "s3:x-amz-metadata-directive": "REPLACE"
        }
      }
    },
    {
      "Sid": "AllowWriteWithReplace",
      "Effect": "Allow",
      "Action": ["s3:PutObject"],
      "Principal": {
        "AWS": ["arn:aws:iam::ACCOUNT-ID:role/C2ManifestWriter"]
      },
      "Resource": ["arn:aws:s3:::c2-manifests/manifests/*"],
      "Condition": {
        "StringEquals": {
          "s3:x-amz-metadata-directive": "REPLACE"
        }
      }
    }
  ]
}
