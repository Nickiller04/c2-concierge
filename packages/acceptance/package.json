{
  "name": "@c2/acceptance",
  "version": "0.1.0",
  "description": "Acceptance harness for hostile-path matrix testing",
  "main": "dist/main.js",
  "bin": {
    "acceptance": "bin/acceptance"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
